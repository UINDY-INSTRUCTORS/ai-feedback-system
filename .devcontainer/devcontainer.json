{
  "name": "EENG 320 Lab Environment with AI Feedback",
  "image": "ghcr.io/202420-phys-230/novnc:3",

  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11"
    }
  },

  "postCreateCommand": "pip install --user pyyaml requests",

  "customizations": {
    "vscode": {
      "extensions": [
        "quarto.quarto",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "github.vscode-pull-request-github"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/root/miniconda3/envs/phenv/bin/python",
        "quarto.render.renderOnSave": true
      }
    }
  },

  "remoteUser": "root",

  "mounts": [
    "source=dhome,target=/root,type=volume"
  ]
}
